						{% render 'c-item-link', link:section.settings.link logo:section.settings.logo logo_text:section.settings.logo_text image:section.settings.image-7 %}
					</div>
					<div class="c-block-item__col l-grid__col-6">
						{% render 'c-item-link', link:section.settings.link logo:section.settings.logo logo_text:section.settings.logo_text image:section.settings.image-8 %}
					</div>					
				</div>
			</div>
		</div>		
	</div>
	{% if section.settings.btn_link != blank %}
	<div class="s-items-banner__footer">
		<a href="{{section.settings.btn_link}}" class="s-items-banner__btn">{{section.settings.btn_text}}</a>
	</div>
	{% endif %}	
</div> 


