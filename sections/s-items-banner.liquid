<div class="s-items-banner">
	<div class="s-items-banner__l-grid l-grid">
		<div class="s-items-banner__col l-grid__col_lg-4">
			<div class="c-block-item">
				<div class="c-block-item__l-grid l-grid">
					<div class="c-block-item__col l-grid__col-6">
						{% render 'c-item-link', link:section.settings.link logo:section.settings.logo logo_text:section.settings.logo_text image:section.settings.image-1 %}
					</div>
					<div class="c-block-item__col l-grid__col-6">
						{% render 'c-item-link', link:section.settings.link logo:section.settings.logo logo_text:section.settings.logo_text image:section.settings.image-2 %}
