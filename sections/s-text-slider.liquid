<div class="s-text-slider">
	<div class="s-text-slider__l-container l-container">
		<div class="s-text-slider__swiper swiper">
			<div class="s-text-slider__wrapper swiper-wrapper">
				{%- for block in section.blocks -%}
					<div class="s-text-slider__slide swiper-slide">
						{% if block.settings.icon != blank %}
							<div class="s-text-slider__icon-cont">
								<img src="{{ block.settings.icon | img_url: 'master', format: 'pjpg' }}" alt="{{ product.title }}" class="s-text-slider__icon" loading="lazy">
							</div>
						{% endif %}
						{% if block.settings.heading != blank or block.settings.heading_grey != blank %}
							<h2 class="s-text-slider__h2">{{block.settings.heading}} &nbsp<span class="s-text-slider__h2-span">{{block.settings.heading_grey}}</span></h2>
						{% endif %}
						{% if block.settings.text != blank %}
							<div class="s-text-slider__desc">{{block.settings.text}}</div>
						{% endif %}
					</div>
				{%- endfor -%}				
			</div>
			<div class="s-text-slider__pagination swiper-pagination"></div>
		</div>
	</div>
</div>

{% schema %}
{
	"name": "Text-slider",
	"tag": "section",	
		"blocks": [
			{
				"type": "text_block",
				"name": "Text-block",
				"settings": [
					{
					"type": "image_picker",
					"id": "icon",
					"label": "Icon"
					},
					{
						"type": "text",
						"id": "heading",
						"label": "Heading"
					},
					{
						"type": "text",
						"id": "heading_grey",
						"label": "Heading grey"
					},
					{
						"type": "textarea",
						"id": "text",
						"label": "Text"
					}
				]
			}
		],
		"presets": [
			{
				"name": "Text-slider"
			}
		]		
	}
{% endschema %}

